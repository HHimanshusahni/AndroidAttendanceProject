
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity"
    android:orientation="vertical"
    android:background="#808080"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">
        <TextView
            android:text="Subject Detalis"
            android:background="#C0C0C0"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <EditText
            android:hint="Subject Name"
            android:id="@+id/etSubjectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textCursorDrawable="@null"
            android:backgroundTint="#000000"
            />
        <EditText
            android:hint="Department"
            android:backgroundTint="#000000"
            android:textCursorDrawable="@null"
            android:id="@+id/etDepartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
        <EditText
            android:hint="Class/Year"
            android:inputType="number"
            android:id="@+id/etYear"
            android:textCursorDrawable="@null"
         android:backgroundTint="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="Roll No Details"
            android:background="#C0C0C0"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
        <EditText
            android:hint="Total Roll No's"
            android:id="@+id/etRollNo"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textCursorDrawable="@null"
            android:backgroundTint="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="Schedule Details"
            android:background="#C0C0C0"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnTime"
                tools:text = "Time"
                android:textAlignment="center"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


            <Spinner
                android:layout_weight="3"
                android:id="@+id/spinnerDays"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </Spinner>
            <Button
                android:layout_weight="1"
                android:icon = "@drawable/roundedbutton"
                android:text="del"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <Button
            android:id="@+id/tvAddNew"
            android:text="Add NEW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="SUBMIT"
            android:id="@+id/btnSubmitSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>




</LinearLayout>
